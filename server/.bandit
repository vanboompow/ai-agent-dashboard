[bandit]
# Bandit security linter configuration for AI Agent Dashboard

# Test IDs to skip
skips = B101,B601,B603

# Test IDs to exclude
exclude_dirs = tests,alembic/versions

# Severity levels to report (LOW, MEDIUM, HIGH)
level = MEDIUM

# Confidence levels to report (LOW, MEDIUM, HIGH)
confidence = MEDIUM

# Output format (csv, custom, html, json, screen, txt, xml, yaml)
format = screen

# Tests to include (comma separated list of test IDs)
# tests = B101,B102,B103,B104,B105,B106,B107,B108,B109,B110,B111,B112,B201,B301,B302,B303,B304,B305,B306,B307,B308,B309,B310,B311,B312,B313,B314,B315,B316,B317,B318,B319,B320,B321,B322,B323,B324,B325,B401,B402,B403,B404,B405,B406,B407,B408,B409,B410,B411,B412,B413,B501,B502,B503,B504,B505,B506,B507,B601,B602,B603,B604,B605,B606,B607,B608,B609,B610,B611,B701,B702,B703

# Paths to include in scan
include = app

# File extensions to include
include_extensions = .py

# Plugins to load
plugins = 

[blacklist_imports]
# Modules to check for unsafe imports
bad_import_sets = [
    "xml.sax",
    "xml.expat",
    "xml.dom.minidom",
    "xml.dom.pulldom",
    "xml.etree.ElementTree",
    "lxml.etree",
    "libxml2",
    "xmlrpclib"
]

[blacklist_calls]
# Functions to check for unsafe calls
bad_name_sets = [
    "pickle.loads",
    "pickle.load",
    "pickle.Unpickler",
    "dill.loads",
    "yaml.load",
    "eval",
    "exec",
    "execfile",
    "compile",
    "__import__",
    "input",
    "raw_input"
]